<div class="pos">
  <% if(trips.length === 0){ %>
    <h2> You don't have trips yet</h2>
    <a href="/trips/new">
      Create a trip
    </a>
  <% }  else { %>
      <h2 class="trips-header"> My Trips </h2>
      <hr>
      <p class="createLink"><a href="/trips/new">Add a  new trip</a></p>

    <% if (typeof successMessage !== "undefined"){ %>
      <% if (successMessage.length > 0) { %>

        <div id="myModal" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              <p class="sucessMess"><%= successMessage %></p>
              </div>
            </div>
          </div>
        </div>

      <% } %>
    <% } %>


    <ul>
      <% trips.forEach((oneTrip)=>{ %>
        <li>
          <div class="row">
            <div class="col-sm-3">
              <a href="/trips/<%= oneTrip._id %>"><img class="picDetail" src="<%= oneTrip.photoAddress[0]%>"></a>
              <br><br>
            </div>

            <div class="col-sm-9">
              <h3><a href="/trips/<%= oneTrip._id %>" style="text-decoration:none;color:inherit;"><%= oneTrip.country %> , <%= oneTrip.cityVisited %></a></h3>
              <h5> Visited: <%= oneTrip.yearVisited %></h5>
              <% if (oneTrip.tripNote){ %>
              <h5>Note: <%= oneTrip.tripNote %></h5>
              <% } %>
              <h5>Add/change note:
                <form action="/trips/<%= oneTrip._id %>/note" method="post" class="form-inline" role="form">
                  <div class="form-group">
                      <input class="form-control" type="text" name="tripNote" placeholder="Your comments" />
                  </div>
                  <div class="form-group">
                      <button class="btn btn-default">Add</button>
                  </div>
                </form>
              </h5>
              <br>
              <p class="tripMenu">
                <!-- <a href="/trips/<%= oneTrip._id %>">See details</a> -->
                <a href="/trips/<%= oneTrip._id %>/edit">Edit</a>
                <div>
                <form action="/trips/<%= oneTrip._id %>/delete" method="post">
                  <button class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>Delete</button>
                </form>
              </div>
              </p>
            </div>
          </div>


        </li>
      <% }) %>
    </ul>
<% }%>

<% if(trips.length !== 0){ %>
  <p class="createLink"><a href="/trips/new">Add a  new trip</a></p>
<% } %>
</div>


<script src="/js/custom.js"></script>
