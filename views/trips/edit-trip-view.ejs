<h2>Edit trip</h2>
<div class="container">
  <form id ="formnew" action="/trips/<%=trip._id%>" method="post" class="well span8">
    <div class="row">
      <div class="col-sm-12 col-md-4">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="trip-country-input"> Country </label>
          <input  class="formLayoutTrip"id="trip-country-input" type="text" name="tripCountry" value="<%= trip.country %>">
        </div><br>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="trip-city-input"> City </label>
          <input  class="formLayoutTrip" id="trip-city-input" type="text" name="tripCity" value="<%= trip.cityVisited %>">
        </div><br>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="trip-year-input"> Year </label>
          <input  class="formLayoutTrip" id="trip-year-input" type="number" name="tripYear" value="<%= trip.yearVisited %>">
        </div><br>
        <div class="form-group">
          <label class="col-sm-4 control-label" for="trip-days-input"> For how long:  </label>
          <input  class="formLayoutTrip" id="trip-days-input" type="text" name="tripDays" value="<%= trip.daysStayed %>">
        </div><br>
        </div>

        <div class="col-md-8">
        <div class="form-group">
          <label class="col-sm-12 control-label" for="trip-note-input"> Note: </label>
          <textarea class="form-control" id="trip-note-input" name="tripNote" rows="2"> <%= trip.tripNote %> </textarea>
        </div><br>
        <div class="form-group">
          <label class="col-sm-12 control-label" for="trip-something-input"> This trip I'll remember because... </label>
          <textarea class="form-control" id="trip-something-input" name="tripSomething" rows="3"> <%= trip.something %> </textarea>
        </div><br>
        <div class="form-group">
          <label class="col-sm-12 control-label" for="trip-thingsSeen-input"> Tourist attractions seen </label>
          <textarea class="form-control" id="trip-thingsSeen-input" name="thingsSeen" rows="3"> <%= trip.tourAttractions %> </textarea>
        </div><br>
        <div class="form-group">
          <label class="col-sm-12 control-label" for="trip-desc-input"> Description </label>
          <textarea class="form-control" id="trip-desc-input" name="tripDescription" rows="6"> <%= trip.description %> </textarea>
        </div><br>


        <button type="button" class="btn btn-danger pull-right voffset3"><a href="/trips" style="text-decoration:none;">Cancel</a></button>
        <button type="submit" class="btn btn-primary pull-right voffset3"> Save Changes </button>
      </div>
    </div>
  </form>

</div>
