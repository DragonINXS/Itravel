          <div class="">
            <p>Traveller <span class="travName">TRAVELLER'S NAME: <%= trip.owner %></span> was in <%= trip.cityVisited %>, <%= trip.country %> </p>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="quote">
          <h5> Year: <%= trip.yearVisited %></h5>
          <b><img src="/img/quote_sign_left.png" alt=""></b> <%= trip.tourAttractions %> <small><img src="/img/quote_sign_right.png" alt=""></small>
        </div>
      </div>
    </div>

  </div>
  </section>
  <!-- kraj probe -->
  <br>
  <div data-toggle="modal" data-target="#loginModal"><a href="#"><span class="seeDet">See more details... </span></a></div>
  <% } else { %>

    <!-- proba -->
    <section id="testimonials">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Random quote</h3>
          <div class="section-title-divider"></div>
        </div>
      </div>

      <% if(user._id.equals(trip.owner)){ %>
        <div id="posBut" class="tripMenu">
          <a href="/trips/<%= trip._id %>/edit">Edit</a>
          <form action="/trips/<%= trip._id %>/delete" method="post">
            <button class="btn btn-danger"><i class="fa fa-trash-o fa-lg"></i>Delete</button>
          </form>
        </div>
        <% } %>

      <div class="row">
        <div class="col-md-4">
          <div class="profile">
            <div class="picture"><img src="<%= trip.photoAddress[0] %>" alt=""></div>
            <p>This trip was to <%= trip.cityVisited %>, <%= trip.country %> </p>
            <div>Note: <%= trip.tripNote %></div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="quote">
            <h5> Year: <%= trip.yearVisited %></h5>
            <h5> I stayed: <%= trip.daysStayed %> </h5>
            <h5> This trip I'll remember because... <%= trip.something %></h5>
            <% if (trip.thingsSeen){ %>
            <h5> Tourist attractions seen <%= trip.thingsSeen %></h5>
            <% } %>
            <b><img src="/img/quote_sign_left.png" alt=""></b> <%= trip.description %> <small><img src="/img/quote_sign_right.png" alt=""></small>

          </div>
        </div>
      </div>

      <div class="container">
          <div class="row">
            <div class="col-sm-4">
              <div class="profile">
                <% if (trip.photoAddress.length > 0){ %>
                  <p>My trip photos</p>
                    <% trip.photoAddress.forEach((photoAddress)=>{ %>
                      <div class="picture"><img class="myImg" class="pic" src="<%= photoAddress %>"></div>
                    <% }); %>
                <%};%>
              </div>
            </div>
          </div>
      </div>
    </div>
    </section>

    <!-- kraj probe -->
  <% } %>
<p><a href="/trips">Back to My trips</a></p>

</div>

